{
  "categorySlug": "doors_windows_glass",
  "categoryLabel": "Doors, Windows & Glass",
  "templateVersion": "1.0",
  "description": "RFQ template for doors, windows, and glass installations",
  "steps": [
    {
      "stepNumber": 1,
      "title": "Project Overview",
      "description": "Tell us about your doors, windows, or glass project",
      "fields": [
        {
          "id": "work_type",
          "label": "Type of Work",
          "type": "select",
          "required": true,
          "options": [
            { "value": "door_installation", "label": "Door Installation" },
            { "value": "window_installation", "label": "Window Installation" },
            { "value": "glass_installation", "label": "Glass/Glazing Installation" },
            { "value": "replacement", "label": "Replacement (Doors/Windows)" },
            { "value": "repair", "label": "Repair/Replacement of Panes" }
          ],
          "placeholder": "Select type of work"
        },
        {
          "id": "quantity",
          "label": "Number of Units",
          "type": "number",
          "required": true,
          "placeholder": "e.g., 8 windows, 3 doors"
        },
        {
          "id": "project_scope",
          "label": "Project Scope",
          "type": "select",
          "required": true,
          "options": [
            { "value": "single_room", "label": "Single Room" },
            { "value": "whole_floor", "label": "Whole Floor" },
            { "value": "whole_building", "label": "Whole Building" }
          ],
          "placeholder": "What's the project scope?"
        }
      ]
    },
    {
      "stepNumber": 2,
      "title": "Specifications",
      "description": "Provide detailed specifications",
      "fields": [
        {
          "id": "material_type",
          "label": "Preferred Material",
          "type": "select",
          "required": false,
          "options": [
            { "value": "aluminum", "label": "Aluminum" },
            { "value": "wood", "label": "Wood" },
            { "value": "upvc", "label": "uPVC" },
            { "value": "steel", "label": "Steel" },
            { "value": "glass_only", "label": "Glass Only" },
            { "value": "no_preference", "label": "No Preference" }
          ],
          "placeholder": "Select preferred material"
        },
        {
          "id": "glass_type",
          "label": "Glass Type",
          "type": "select",
          "required": false,
          "options": [
            { "value": "clear", "label": "Clear Glass" },
            { "value": "tinted", "label": "Tinted" },
            { "value": "frosted", "label": "Frosted" },
            { "value": "tempered", "label": "Tempered" },
            { "value": "double_glazed", "label": "Double Glazed" },
            { "value": "other", "label": "Other" }
          ],
          "placeholder": "Select glass type"
        },
        {
          "id": "security_requirements",
          "label": "Security Requirements",
          "type": "checkbox",
          "required": false,
          "options": [
            { "value": "burglar_bars", "label": "Burglar Bars/Security Grilles" },
            { "value": "reinforced", "label": "Reinforced Glass" },
            { "value": "locks", "label": "High-Security Locks" }
          ]
        },
        {
          "id": "custom_size",
          "label": "Are any units custom size?",
          "type": "radio",
          "required": false,
          "options": [
            { "value": "yes", "label": "Yes" },
            { "value": "no", "label": "No" }
          ]
        }
      ]
    },
    {
      "stepNumber": 3,
      "title": "Detailed Requirements",
      "description": "More details about your needs",
      "fields": [
        {
          "id": "style_preference",
          "label": "Style Preference",
          "type": "select",
          "required": false,
          "options": [
            { "value": "modern", "label": "Modern/Minimalist" },
            { "value": "traditional", "label": "Traditional" },
            { "value": "contemporary", "label": "Contemporary" },
            { "value": "mixed", "label": "Mixed Styles" }
          ],
          "placeholder": "Select style preference"
        },
        {
          "id": "existing_condition",
          "label": "Are you replacing existing installations?",
          "type": "radio",
          "required": true,
          "options": [
            { "value": "yes_new_frames", "label": "Yes, replacing frames too" },
            { "value": "yes_existing_frames", "label": "Yes, keeping existing frames" },
            { "value": "new", "label": "New installation" }
          ]
        },
        {
          "id": "special_features",
          "label": "Any special features? (e.g., sliding, folding, automated)",
          "type": "textarea",
          "required": false,
          "placeholder": "Describe any special features needed"
        }
      ]
    },
    {
      "stepNumber": 4,
      "title": "Location & Timeline",
      "description": "Where and when do you need this?",
      "fields": [
        {
          "id": "county",
          "label": "County",
          "type": "select",
          "required": true,
          "options": [
            { "value": "nairobi", "label": "Nairobi" },
            { "value": "mombasa", "label": "Mombasa" },
            { "value": "kisumu", "label": "Kisumu" },
            { "value": "nakuru", "label": "Nakuru" },
            { "value": "other", "label": "Other" }
          ],
          "placeholder": "Select your county"
        },
        {
          "id": "timeline",
          "label": "Project Timeline",
          "type": "select",
          "required": true,
          "options": [
            { "value": "urgent", "label": "Urgent (1 week)" },
            { "value": "soon", "label": "Soon (2-3 weeks)" },
            { "value": "flexible", "label": "Flexible (1 month)" },
            { "value": "planned", "label": "Planned (2+ months)" }
          ],
          "placeholder": "When do you need completion?"
        }
      ]
    },
    {
      "stepNumber": 5,
      "title": "Budget & Documents",
      "description": "Budget and any supporting documents",
      "fields": [
        {
          "id": "budget_range",
          "label": "Budget Range",
          "type": "select",
          "required": true,
          "options": [
            { "value": "under_100k", "label": "Under 100,000 KES" },
            { "value": "100k_300k", "label": "100,000 - 300,000 KES" },
            { "value": "300k_1m", "label": "300,000 - 1,000,000 KES" },
            { "value": "1m_plus", "label": "Over 1,000,000 KES" }
          ],
          "placeholder": "Select your budget range"
        },
        {
          "id": "site_measurements",
          "label": "Site Photos/Measurements",
          "type": "file-upload",
          "required": false,
          "accept": "image/*",
          "multiple": true,
          "placeholder": "Upload photos and measurement documents"
        }
      ]
    },
    {
      "stepNumber": 6,
      "title": "Review & Submit",
      "description": "Review before submitting",
      "fields": [
        {
          "id": "additional_notes",
          "label": "Additional Notes",
          "type": "textarea",
          "required": false,
          "placeholder": "Any other information?"
        },
        {
          "id": "accept_terms",
          "label": "I accept the terms and conditions",
          "type": "checkbox",
          "required": true
        }
      ]
    }
  ]
}
