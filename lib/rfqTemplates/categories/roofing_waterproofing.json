{
  "categorySlug": "roofing_waterproofing",
  "categoryLabel": "Roofing & Waterproofing",
  "templateVersion": "1.0",
  "description": "RFQ template for roofing and waterproofing projects",
  "steps": [
    {
      "stepNumber": 1,
      "title": "Project Overview",
      "description": "Tell us about your roofing or waterproofing project",
      "fields": [
        {
          "id": "work_type",
          "label": "Type of Work",
          "type": "select",
          "required": true,
          "options": [
            { "value": "new_roof", "label": "New Roof Installation" },
            { "value": "roof_repair", "label": "Roof Repair" },
            { "value": "roof_replacement", "label": "Roof Replacement" },
            { "value": "waterproofing", "label": "Waterproofing Treatment" },
            { "value": "gutter_installation", "label": "Gutter Installation" }
          ],
          "placeholder": "Select type of work"
        },
        {
          "id": "roof_area",
          "label": "Approximate Roof Area (m²)",
          "type": "number",
          "required": true,
          "placeholder": "e.g., 250"
        },
        {
          "id": "existing_condition",
          "label": "Current Roof Condition",
          "type": "select",
          "required": true,
          "options": [
            { "value": "excellent", "label": "Excellent" },
            { "value": "good", "label": "Good" },
            { "value": "fair", "label": "Fair" },
            { "value": "poor", "label": "Poor" },
            { "value": "critical", "label": "Critical (Water Damage)" }
          ],
          "placeholder": "Rate the current condition"
        },
        {
          "id": "roof_type",
          "label": "Current Roof Type",
          "type": "select",
          "required": false,
          "options": [
            { "value": "tile", "label": "Tile" },
            { "value": "corrugated_metal", "label": "Corrugated Metal" },
            { "value": "concrete", "label": "Concrete" },
            { "value": "asphalt", "label": "Asphalt Shingles" },
            { "value": "flat", "label": "Flat Roof" },
            { "value": "unknown", "label": "Unknown" }
          ],
          "placeholder": "Select current roof type"
        },
        {
          "id": "has_leaks",
          "label": "Are there any active leaks?",
          "type": "radio",
          "required": true,
          "options": [
            { "value": "yes", "label": "Yes" },
            { "value": "no", "label": "No" }
          ]
        }
      ]
    },
    {
      "stepNumber": 2,
      "title": "Project Details",
      "description": "Provide more details about your project",
      "fields": [
        {
          "id": "building_type",
          "label": "Building Type",
          "type": "select",
          "required": true,
          "options": [
            { "value": "residential", "label": "Residential" },
            { "value": "commercial", "label": "Commercial" },
            { "value": "industrial", "label": "Industrial" },
            { "value": "institutional", "label": "Institutional (School/Hospital)" }
          ],
          "placeholder": "Select building type"
        },
        {
          "id": "roof_slope",
          "label": "Roof Slope",
          "type": "select",
          "required": false,
          "options": [
            { "value": "flat", "label": "Flat (0-2°)" },
            { "value": "low", "label": "Low Slope (2-6°)" },
            { "value": "medium", "label": "Medium Slope (6-12°)" },
            { "value": "steep", "label": "Steep (>12°)" }
          ],
          "placeholder": "Select roof slope"
        },
        {
          "id": "access_difficulty",
          "label": "Access Difficulty",
          "type": "radio",
          "required": false,
          "options": [
            { "value": "easy", "label": "Easy (Ground level/Low roof)" },
            { "value": "moderate", "label": "Moderate (Multi-story building)" },
            { "value": "difficult", "label": "Difficult (Special equipment needed)" }
          ]
        }
      ]
    },
    {
      "stepNumber": 3,
      "title": "Materials & Specifications",
      "description": "What materials do you prefer?",
      "fields": [
        {
          "id": "material_preference",
          "label": "Preferred Roofing Material",
          "type": "select",
          "required": false,
          "options": [
            { "value": "tile", "label": "Tile (Clay/Concrete)" },
            { "value": "corrugated_metal", "label": "Corrugated Metal" },
            { "value": "asphalt_shingles", "label": "Asphalt Shingles" },
            { "value": "flat_membrane", "label": "Flat Membrane (TPO/PVC)" },
            { "value": "metal_standing_seam", "label": "Metal Standing Seam" },
            { "value": "no_preference", "label": "No Preference" }
          ],
          "placeholder": "Select preferred material"
        },
        {
          "id": "waterproofing_type",
          "label": "Waterproofing Method",
          "type": "select",
          "required": false,
          "options": [
            { "value": "membrane", "label": "Membrane" },
            { "value": "coating", "label": "Waterproof Coating" },
            { "value": "sealant", "label": "Sealant Application" },
            { "value": "combined", "label": "Combined (Membrane + Coating)" }
          ],
          "placeholder": "Select waterproofing method"
        },
        {
          "id": "special_requirements",
          "label": "Any special requirements? (e.g., energy-efficient, solar-ready)",
          "type": "textarea",
          "required": false,
          "placeholder": "Describe any special requirements"
        }
      ]
    },
    {
      "stepNumber": 4,
      "title": "Location & Timeline",
      "description": "Where and when do you need this done?",
      "fields": [
        {
          "id": "county",
          "label": "County",
          "type": "select",
          "required": true,
          "options": [
            { "value": "nairobi", "label": "Nairobi" },
            { "value": "mombasa", "label": "Mombasa" },
            { "value": "kisumu", "label": "Kisumu" },
            { "value": "nakuru", "label": "Nakuru" },
            { "value": "other", "label": "Other" }
          ],
          "placeholder": "Select your county"
        },
        {
          "id": "project_timeline",
          "label": "Project Timeline",
          "type": "select",
          "required": true,
          "options": [
            { "value": "urgent", "label": "Urgent (Within 1 week)" },
            { "value": "soon", "label": "Soon (1-2 weeks)" },
            { "value": "flexible", "label": "Flexible (2-4 weeks)" },
            { "value": "planned", "label": "Planned (1-3 months)" }
          ],
          "placeholder": "When do you need this completed?"
        },
        {
          "id": "current_occupancy",
          "label": "Is the property currently occupied?",
          "type": "radio",
          "required": false,
          "options": [
            { "value": "yes", "label": "Yes" },
            { "value": "no", "label": "No" }
          ]
        }
      ]
    },
    {
      "stepNumber": 5,
      "title": "Budget & Attachments",
      "description": "What's your budget and any supporting documents?",
      "fields": [
        {
          "id": "budget_range",
          "label": "Budget Range",
          "type": "select",
          "required": true,
          "options": [
            { "value": "under_100k", "label": "Under 100,000 KES" },
            { "value": "100k_500k", "label": "100,000 - 500,000 KES" },
            { "value": "500k_1m", "label": "500,000 - 1,000,000 KES" },
            { "value": "1m_plus", "label": "Over 1,000,000 KES" }
          ],
          "placeholder": "Select your budget range"
        },
        {
          "id": "site_photos",
          "label": "Site Photos (Optional)",
          "type": "file-upload",
          "required": false,
          "accept": "image/*",
          "multiple": true,
          "placeholder": "Upload photos of the current roof/site"
        },
        {
          "id": "building_plans",
          "label": "Building Plans (Optional)",
          "type": "file-upload",
          "required": false,
          "accept": ".pdf,.dwg,.jpg,.png",
          "placeholder": "Upload building plans if available"
        }
      ]
    },
    {
      "stepNumber": 6,
      "title": "Review & Submit",
      "description": "Review your request before submitting",
      "fields": [
        {
          "id": "additional_notes",
          "label": "Any additional notes or concerns?",
          "type": "textarea",
          "required": false,
          "placeholder": "Anything else we should know about this project?"
        },
        {
          "id": "accept_terms",
          "label": "I accept the terms and conditions",
          "type": "checkbox",
          "required": true,
          "placeholder": "Check this box to proceed"
        }
      ]
    }
  ]
}
